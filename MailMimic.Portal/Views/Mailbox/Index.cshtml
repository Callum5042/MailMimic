@using MailMimic.Portal.Models
@model MailboxModel

@{
    ViewBag.Title = "Mailbox";
    Layout = "~/Views/Mailbox/_Layout.cshtml";
}

@if (Model.Emails.Any())
{
    <table class="table table-striped table-hover mb-0">
        <tbody>
            @foreach (var item in Model.Emails)
            {
                <tr>
                    <td>@item.MailFrom</td>
                    <td>@item.Subject</td>
                    <td>@item.DateTime</td>
                    <td>@item.Size</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info" asp-area="MailMimic" asp-controller="Mailbox" asp-action="Email" asp-route-id="@item.Id">View</a>
                        <form asp-controller="Mailbox" asp-action="Delete" class="d-inline">
                            <input name="Id" value="@item.Id" type="hidden" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light mb-0" role="alert">
        Mailbox is empty
    </div>
}